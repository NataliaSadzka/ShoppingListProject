<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               >
    <!--Light Yellow Color-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l1"
            android:background="@color/blekit">
        <!--Light Pink Color-->

        <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Nazwa"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textColor="#0E0E0E" android:layout_marginLeft="5dp"/>
        <ImageView
                android:id="@+id/image_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit"
                android:layout_gravity="center" android:padding="03dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@id/l1"
            android:id="@+id/l2" android:layout_marginTop="-1dp">

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginTop="20dp"
                  android:id="@+id/tvName" android:layout_marginBottom="50dp"/>
    </LinearLayout>
    <Button
            android:id="@+id/saveButton"
            android:text="Zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false" android:layout_marginTop="675dp"/>

</RelativeLayout>